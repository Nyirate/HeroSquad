{{#partial "content"}}

    <h1></h1>

    {{#if posts}}
        {{#each posts}}
            <div class="container">
                <div class="well">
                    <p style="color:white;font-size:25px">Hero's name:{{name}} </p>
                    <p style="color:white;font-size:25px">Hero's age:{{age}}</p>
                    <p style="color:white;font-size:25px">Hero's power:{{power}}</p>
                    <p style="color:white;font-size:25px">Hero's weakness:{{weakness}}</p>
                </div>
            </div>

        {{/each}}
    {{else}}
        <p style="text-align:center;margin-left:20%;color:white;font-size:25px">No hero added</p>
    {{/if}}

{{/partial}}

{{> layout.hbs}}
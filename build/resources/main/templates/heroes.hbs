{{#partial "content"}}

    <h1></h1>

    {{#if posts}}
        {{#each posts}}
            <div class="container">
                <div class="well" style="width:30%;opacity:0.7;margin-left:40%;margin-top:7%">
                    <p style="color:black;font-size:25px">Hero's name:{{name}} </p>
                    <p style="color:black;font-size:25px">Hero's age:{{age}}</p>
                    <p style="color:black;font-size:25px">Hero's power:{{power}}</p>
                    <p style="color:black;font-size:25px">Hero's weakness:{{weakness}}</p>
                    <br>
                    <button type="submit" class="btn btn-default"><a href="/squad">Hero to Squad</a></button>
                </div>
            </div>

        {{/each}}
    {{else}}
        <p style="text-align:center;margin-left:20%;color:white;font-size:25px">No hero added</p>
    {{/if}}

{{/partial}}

{{> layout.hbs}}
{{#partial "content"}}

    <h1></h1>

    {{#if squads}}
        {{#each squads}}
          <p style="text-align:center;margin-left:10%;color:white;font-size:25px">Squad's name:{{name}}</p>
          <p style="text-align:center;margin-left:10%;color:white;font-size:25px">Squad's size:{{name}}</p>
          <p style="text-align:center;margin-top:10%;color:white;font-size:25px">Squad's cause:{{cause}}</p>
        {{/each}}
    {{else}}
        <p style="text-align:center;margin-left:20%;color:white;font-size:25px">No squad added</p>
    {{/if}}

{{/partial}}

{{> layout.hbs}}